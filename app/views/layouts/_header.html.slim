nav.top
  .masterin
    .help-menu-1
      = link_to I18n.t('app.nav.contacts'), contact_path
      = link_to I18n.t('app.nav.who_we_are'), about_us_path
      = link_to I18n.t('app.nav.all_about_buying'), helps_path
      = link_to I18n.t('app.nav.blog'), "#"

    .help-menu-2
      -if user_signed_in?
        span #{current_user.first_name} #{current_user.last_name}
        =link_to "Odhl√°sit", destroy_user_session_path, method: :delete
      -else
        =link_to I18n.t('app.nav.login'), new_user_session_path
        =link_to I18n.t('app.nav.registration'), new_user_registration_path
      =link_to I18n.t('app.nav.my_choice'), "#"

    .cleaner

.header.top
    .logo
      =link_to root_path do
        = I18n.t('app.desc')
        span

    = form_for "#"
      = text_field "#", "#", placeholder: I18n.t('helpers.placeholder.search'), class: "text"
      = submit_tag "Hledat", class: "button-search"
      .cleaner
      span
        = link_to I18n.t('helpers.page.search_by_parameters'), searching_path
      /   //<!--<input class="mobile-button" type="submit" value="">-->
    .minicart
      .currency
        span.active
          strong
            = I18n.t('helpers.currency.czk')
        | &nbsp;|&nbsp;
        = link_to I18n.t('helpers.currency.eur'), "#"
      p.cart
        = link_to show_basket_path do
          strong
            = I18n.t('helpers.page.you_order')
          br
          = I18n.t('helpers.page.order.nothing')

.cleaner
