<%= render partial: 'layouts/breadcrumb' %>

<h1><%= t('app.page.sign_in.title') %></h1>
<h2><%= t('app.page.sign_in.new_customers') %></h2>
<p><%= t('app.page.sign_in.benefits_of_account') %></p>
<%= link_to I18n.t('helpers.button.create_account'), new_user_registration_path, class: "button-primary" %>
<h2><%= t('app.page.sign_in.have_account_login') %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { novalidate: false }) do |f| %>
  <fieldset>
    <br>
    <%= f.input :email, required: false, autofocus: true, placeholder: t('helpers.placeholder.email') %>
    <%= f.input :password, required: false, placeholder: t('helpers.placeholder.password') %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </fieldset>
  <div class="form-actions">
    <%= f.button :submit, t('helpers.button.log_in'), class: "button-primary" %>
  </div>
<% end %>
<p><%= link_to t('helpers.button.forgot_password'), new_password_path(resource_name) %></p>
<%#= render "users/shared/links" %>
